<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

	<record model="ir.ui.view" id="view_order_stock_form">
	    <field name="name">sale.order.form.inherit</field>
	    <field name="model">sale.order</field>
	    <field name="inherit_id" ref="sale.view_order_form"/>
	    <field name="arch" type="xml">
	    <data>
                <xpath expr="//field[@name='order_line']" position="attributes">
                    <attribute name="context">{'location':warehouse_id.location_id}</attribute>
		</xpath>
        	<xpath expr="//field[@name='order_line']/tree/field[@name='product_uom_qty']" position="after">
		    <field name="virtual_available" readonly="True"/>
	        </xpath>
        	<xpath expr="//field[@name='order_line']/tree/field[@name='price_subtotal']" position="after">
        	    <button name="view_availability" type="object" icon="gtk-find"/>
	        </xpath>
	        </data> 
	    </field>
	</record>

    </data>
</openerp>
